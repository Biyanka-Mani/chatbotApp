<h2 class="ui center aligned medium icon header">
  <i class="circular purple coffee icon"></i>
  Say Something!
</h2>

<div class="ui two column grid">
    <div class="twelve wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content">
                <div class="ui feed">

                   <%= render @messages %>

                    
                </div>
            </div>
            <div class="extra content">

                <%= form_with model: @message,class:"ui reply form",role:"form",local: true do |f| %>
                
                    <div class="field">
                        <div class="ui fluid icon input">
                            <%= f.text_field :body, placeholder:"Enter Message"%>
                             <%= f.button '<i class="bordered purple icon edit"></i>'.html_safe%>
                            
                        </div>
                    </div>
                
                <% end %>

            </div>
        </div>
    </div>
    <div class="four wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content">
                <div class="ui purple vertical menu">
                <a class="active item">
                    Home
                </a>
                <a class="item">
                    Messages
                </a>
                <a class="item">
                    Friends
                </a>
                </div>
            </div>
        </div>
    </div>
</div>